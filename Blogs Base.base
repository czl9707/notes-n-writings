filters:
  and:
    - file.inFolder("blog/by/developer")
    - '!file.inFolder("blog/by/developer/drafts")'
properties:
  file.name:
    displayName: file name
views:
  - type: cards
    name: Dashboard
    order:
      - title
      - created_date
      - last_modified_date
      - tags
      - featured
    sort:
      - property: file.name
        direction: ASC
    image: note.cover_url
    imageFit: ""
    imageAspectRatio: 0.6
    cardSize: 280
